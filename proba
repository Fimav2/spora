#include <iostream>
#include <fstream>

using namespace std;

 long long itc_len(string str){
    long long b=0;
    for(int i=0; str[i]!= '\0'; i++){
        b++;
    }
    return b;
 }


int count_c(string g){
    int chechik = 0;
    int maxi = 0;

    for(int i; i<itc_len(g); i++){
        if(( g[i]= 'B' ||  g[i]= 'C' || g[i]= 'D') && ( g[i+1]= 'B' || g[i+1]= 'E'|| g[i+1]= 'D') && (g[i+2]= 'B'||  g[i+2]= 'E' ||g[i+2]= 'C') && (g[i]!=g[i+1] & g[i+1]!=g[i+2])){
        chechik ++;
        }
        else{
            chechik = 0;
        }
        if(chechik > maxi){
        maxi = chechik;
        }
    }

    return maxi;

}




int main()
{
    ifstream file_handler;
    string data;
	file_handler.open("k7c-1.txt");
	file_handler >> data;
	file_handler.close();

	cout << count_c(data);

    return 0;
}
